<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.AndroidPemula" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/onPrimaryColor</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:statusBarColor">@color/primaryColor</item>
    </style>

    <style name="Theme.AndroidPemula" parent="Base.Theme.AndroidPemula" />

    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/primaryColor</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:popupTheme">@style/MyActionBarPopupTheme</item>
    </style>

    <style name="MyActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/onPrimaryColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyActionBarPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/onPrimaryColor</item>
    </style>
</resources>
